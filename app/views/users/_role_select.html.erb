<div class="form-control">
  <%= f.label :role, class: 'label' %>
  <%= f.select :role, nil, {}, class: 'base-select' do %>
    <option value="admin" <%= 'selected' if f.object.role == 'admin' %>><%= t('admin') %></option>
    <option value="editor" <%= 'selected' if f.object.role == 'editor' %>><%= t('editor') %></option>
    <option value="viewer" <%= 'selected' if f.object.role == 'viewer' %>><%= t('viewer') %></option>
  <% end %>
  <label class="label">
    <span class="label-text-alt">
      <%= t('admin') %>: <%= t('full_access_to_all_resources') %><br>
      <%= t('editor') %>: <%= t('can_manage_own_templates_and_submissions') %><br>
      <%= t('viewer') %>: <%= t('read_only_access') %>
    </span>
  </label>
</div>
